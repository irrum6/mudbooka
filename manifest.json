{
    "manifest_version": 2,
    "name": "Mudbooka",
    "version": "0.1",
    "description": "Autobookmaker active tabs",
    "icons": {
        "16": "icons/logo.svg",
        "32": "icons/logo.svg",
        "48": "icons/logo.svg",
        "96": "icons/logo.svg"
    },
    "browser_action": {
        "default_icon": "icons/logo.svg"
    },
    "sidebar_action": {
        "default_title": "Mudbooka",
        "default_panel": "sidebar/sidebar.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "<all_urls>",
        "bookmarks",
        "downloads",
        "history",
        "menus",
        "tabs"
    ]
}