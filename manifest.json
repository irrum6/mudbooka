{
    "manifest_version": 2,
    "name": "Mudbooka",
    "version": "0.5.2",
    "description": "Automatically bookmarks active tabs",
    "icons": {
        "16": "icons/logo.svg",
        "32": "icons/logo.svg",
        "48": "icons/logo.svg",
        "96": "icons/logo.svg"
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/logo.svg",
            "32": "icons/logo.svg"
        }
    },
    "options_ui": {
        "page": "options/index.html"
    },
    "background": {
        "scripts": [
            "options/utils.js","background.js"
        ]
    },
    "permissions": [
        "<all_urls>",
        "bookmarks",
        "tabs",
        "storage"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "Mudbooka03@temporary-addon"
        }
    }
}